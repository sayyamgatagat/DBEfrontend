<body>
    <div class="container">
        <ul class="agentNav">
            <li class="navcat"><a href="/agentprof" >
                <img src="./src/group.svg" alt="" width="50px" style="display: block;">
                View Profiles
            </a></li>
            <li class="navcat"><a href="/agentcall" ><img src="./src/telephone-call.svg" style="display: block;" alt="" width="50px" >View Call Requests</a></li>
            <li class="navcat"><a href="/signup" ><img src="./src/add-friend.svg" alt="" style="display: block;" width="50px">Add new Customer</a></li>
          </ul>

        <div class="emp_details">
            <div class="card shadow">
              <div class="card-body">
                <%if(cusresults != undefined){%>
                <h2 style="text-align: center;">All Customers</h2>
                <table class="table table-bordered table-striped nowrap display" id="table_data">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th id="emp" scope="col">Customer ID</th>
                      <th scope="col">Name</th>
                      <th scope="col">DOB</th>
                      <th scope="col">Gender</th>
                      <th scope="col">City</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone number</th>
                      <th scope="col">Policy number</th>
                    </tr>
                    <%}%>
                    <%if(callresults != undefined){%>
                      <h2 style="text-align: center;">Call Requests</h2>
                <table class="table table-bordered table-striped nowrap display" id="table_data">
                  <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th id="emp" scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Appointment Date</th>
                        <th scope="col">Phone number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Message</th>
                      </tr>
                      <%}%>
                  </thead>
                  
                  <tbody>
                    <%if(cusresults != undefined){%>
                    <%for(var i=0;i < cusresults.length ; i++){%>
                        <tr>
                          <th scope="row"><%=i+1%></th>
                          <td><%=cusresults[i].customer_id%></td>
                          <td><%=cusresults[i].name%></td>
                          <td><%=cusresults[i].DOB.toString().slice(4,15)%></td>
                          <td><%=cusresults[i].gender%></td>
                          <td><%=cusresults[i].city%></td>
                          <td><%=cusresults[i].email%></td>
                          <td><%=cusresults[i].phone_num%></td>
                          <td><%=cusresults[i].policy_no%></td>
                        </tr>
                    <%}%> 
                    <%}%>
                    <%if(callresults != undefined){%>
                      <%for(var i=0;i < callresults.length ; i++){%>
                          <tr>
                            <th scope="row"><%=i+1%></th>
                            <td><%=callresults[i].id%></td>
                            <td><%=callresults[i].name%></td>
                            <td><%=callresults[i].date.toString().slice(4,15)%></td>
                            <td><%=callresults[i].phone%></td>
                            <td><%=callresults[i].email%></td>
                            <td><%=callresults[i].msg%></td>
                          </tr>
                      <%}%> 
                      <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
        
</body>
